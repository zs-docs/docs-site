{
  "name": "docs-site",
  "version": "2.0.0",
  "description": "ðŸ¥ ZARISH SPHERE Documentation - Enterprise-Grade Healthcare Platform",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "lint": "prettier --write .",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write 'docs/**/*.md' 'blog/**/*.md' 'src/**/*.{js,jsx,ts,tsx,json}' && markdownlint --fix \"**/*.md\"",
    "lint:markdown": "echo 'Markdown linting temporarily disabled for deployment'",
    "lint:markdown:fix": "echo 'Markdown linting temporarily disabled for deployment'",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "cleanup": "chmod +x cleanup.sh && ./cleanup.sh",
    "push": "chmod +x git-push.sh && ./git-push.sh",
    "security:audit": "chmod +x scripts/security-audit.sh && ./scripts/security-audit.sh",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "quality:check": "node scripts/auto-checker.js",
    "quality:report": "cat quality-report.json",
    "automation:run": "chmod +x scripts/comprehensive-automation.sh && ./scripts/comprehensive-automation.sh",
    "automation:dependencies": "chmod +x scripts/comprehensive-automation.sh && ./scripts/comprehensive-automation.sh --dependencies-only",
    "automation:security": "chmod +x scripts/comprehensive-automation.sh && ./scripts/comprehensive-automation.sh --security-only",
    "automation:sync": "chmod +x scripts/comprehensive-automation.sh && ./scripts/comprehensive-automation.sh --sync-only",
    "release:patch": "chmod +x scripts/version-control.sh && ./scripts/version-control.sh release patch",
    "release:minor": "chmod +x scripts/version-control.sh && ./scripts/version-control.sh release minor",
    "release:major": "chmod +x scripts/version-control.sh && ./scripts/version-control.sh release major",
    "release:build": "chmod +x scripts/version-control.sh && ./scripts/version-control.sh build",
    "version": "chmod +x scripts/version-control.sh && ./scripts/version-control.sh version",
    "publish:preview": "npm run build && echo 'Preview build complete - check build/'",
    "publish:staging": "npm run build && echo 'Staging build complete - ready for deployment'",
    "publish:production": "npm run build && echo 'Production build complete - ready for deployment'"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@mdx-js/react": "^3.0.0",
    "axios": "^1.13.3",
    "cheerio": "^1.2.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/tsconfig": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.2.5",
    "typescript": "~5.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write",
      "markdownlint --fix"
    ],
    "*.{json,css,scss}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zs-docs/docs-site.git"
  },
  "keywords": [
    "zarish-sphere",
    "healthcare",
    "documentation",
    "docusaurus",
    "react",
    "typescript",
    "medical",
    "platform",
    "enterprise"
  ],
  "author": "ZARISH SPHERE Team",
  "license": "MIT",
  "homepage": "https://docs.zarishsphere.com",
  "bugs": {
    "url": "https://github.com/zs-docs/docs-site/issues"
  }
}