{
  "name": "zarish-sphere-docs-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for ZARISH SPHERE documentation",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=jest.unit.config.js --coverage",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:component": "jest --config=jest.component.config.js",
    "test:accessibility": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "test:performance": "lighthouse http://localhost:3000 --output=json --output-path=./performance-report.json",
    "test:smoke": "jest --config=jest.smoke.config.js",
    "test:browserstack": "browserstack-node-sdk",
    "validate:links": "markdown-link-check docs/**/*.md --config .mlc.config.json",
    "validate:markdown": "markdownlint docs/**/*.md --config .markdownlintrc.json",
    "validate:structure": "node scripts/validate-structure.js",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "monitor:uptime": "node scripts/uptime-monitor.js",
    "metrics:update": "node scripts/update-metrics.js",
    "report:deployment": "node scripts/deployment-report.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/jest": "^29.5.0",
    "axe-core": "^4.8.0",
    "browserstack-node-sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^13.0.1",
    "markdown-link-check": "^3.11.0",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.37.0",
    "pa11y-ci": "^3.0.0",
    "playwright": "^1.40.0",
    "puppeteer": "^24.36.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "tests/**/*.{js,jsx,ts,tsx}",
      "!tests/**/*.test.{js,jsx,ts,tsx}",
      "!tests/**/*.spec.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
